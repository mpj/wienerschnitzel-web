/* CSS declarations go here */
html
  font-size 	10
  margin 			0
  padding 		0


h2
	margin 				0
	padding 			0
	font-family 	'Italiana', serif
	font-size			15px

#header
	text-align 			center
	margin-bottom 	10px
	margin-top			75px
	
	/*img#logo*/

#add-form
	text-align 	center

	input
		width 		310px
		color 		#b8b8b8

	input:focus
		color 		black

	input.invalid
		box-shadow 	0px 0px 10px red
		border  		1px solid red


#shopping-list
	margin-top	50px
	text-align 	center

	h1
		text-align 	center
		font-size		22px
		height			22px
		line-height 26px

	input
		text-align	center
		font-size   22px
		height 			26px
		width 			310px
		font-weight bold
		width				100%
		margin 			0
		padding     0
		border 			0
		outline			0
		box-shadow  none

	ul, li 
		list-style		none
		padding 			0
		margin 				0

	li
		margin-bottom 6px
	ul
		margin-top		20px
		margin-bottom 20px